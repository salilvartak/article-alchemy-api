{
  "openapi": "3.1.0",
  "info": {
    "title": "Article Content API",
    "description": "API for scraping, categorizing, and generating content from articles.",
    "version": "0.1.0"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Read Root",
        "operationId": "read_root__get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/process-article": {
      "post": {
        "summary": "Process Article Api",
        "description": "Takes a URL, scrapes the article, categorizes it, and generates\nAI content (summaries, social media posts, snippets, and key takeaways).",
        "operationId": "process_article_api_process_article_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/URLInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleOutput"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/generate-trend-report": {
      "post": {
        "summary": "Generate Trend Report Api",
        "description": "Takes a list of articles from a single category and synthesizes a\ntrend report.",
        "operationId": "generate_trend_report_api_generate_trend_report_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TrendReportInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrendReportOutput"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/generate-image": {
      "post": {
        "summary": "Generate Image Api",
        "description": "Generates a social media image from a text prompt and returns it as a Base64 string.",
        "operationId": "generate_image_api_generate_image_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PromptInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ImageOutput"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ArticleOutput": {
        "properties": {
          "url": {
            "type": "string",
            "title": "Url"
          },
          "title": {
            "type": "string",
            "title": "Title"
          },
          "content": {
            "type": "string",
            "title": "Content"
          },
          "images": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Images"
          },
          "categories": {
            "additionalProperties": {
              "type": "number"
            },
            "type": "object",
            "title": "Categories"
          },
          "ai_content": {
            "additionalProperties": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ]
            },
            "type": "object",
            "title": "Ai Content"
          }
        },
        "type": "object",
        "required": [
          "url",
          "title",
          "content",
          "images",
          "categories",
          "ai_content"
        ],
        "title": "ArticleOutput"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ImageOutput": {
        "properties": {
          "prompt": {
            "type": "string",
            "title": "Prompt"
          },
          "image_base64": {
            "type": "string",
            "title": "Image Base64"
          }
        },
        "type": "object",
        "required": [
          "prompt",
          "image_base64"
        ],
        "title": "ImageOutput"
      },
      "PromptInput": {
        "properties": {
          "prompt": {
            "type": "string",
            "title": "Prompt"
          }
        },
        "type": "object",
        "required": [
          "prompt"
        ],
        "title": "PromptInput"
      },
      "TrendReportInput": {
        "properties": {
          "category": {
            "type": "string",
            "title": "Category"
          },
          "articles": {
            "items": {
              "additionalProperties": true,
              "type": "object"
            },
            "type": "array",
            "title": "Articles"
          }
        },
        "type": "object",
        "required": [
          "category",
          "articles"
        ],
        "title": "TrendReportInput"
      },
      "TrendReportOutput": {
        "properties": {
          "category": {
            "type": "string",
            "title": "Category"
          },
          "report": {
            "type": "string",
            "title": "Report"
          }
        },
        "type": "object",
        "required": [
          "category",
          "report"
        ],
        "title": "TrendReportOutput"
      },
      "URLInput": {
        "properties": {
          "url": {
            "type": "string",
            "title": "Url"
          }
        },
        "type": "object",
        "required": [
          "url"
        ],
        "title": "URLInput"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}